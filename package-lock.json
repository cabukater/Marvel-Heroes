  it('should render dynamic content in the template', () => {
    const msg = {
      data: {
        conteudo: '<p>Texto de <a href="http://example.com">exemplo</a>.</p>',
      },
    };
    component.insertInnerHtml(msg);
    fixture.detectChanges();

    const dynamicContentElement = fixture.debugElement.query(By.css('#dynamic-content'));
    expect(dynamicContentElement.nativeElement.innerHTML).toContain('Texto de');
    expect(dynamicContentElement.nativeElement.innerHTML).toContain('exemplo');
  });
